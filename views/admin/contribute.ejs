<%- include('../includes/head.ejs') %>
    <!-- Font Awesome -->
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main class="mt-3">
                <div style="margin:auto; max-width: 95%">
                            <form action="/admin/contribute" method="GET" class="mt-3 col-12 mb-3">
                                <div class="form-group" style="margin:auto;">
                                    <div class="row" style="margin: auto;">
                                        <button type='button' class="btn btn-light" style="margin:auto;background-color: #a50064; border-color:aliceblue; color: aliceblue; "
                                            data-bs-toggle="modal" data-bs-target="#formFilter"> <svg
                                                xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-filter" viewBox="0 0 16 16">
                                                <path
                                                    d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z" />
                                            </svg> Bộ lọc</button>
                                    </div>
                                </div>

                            </form>
                            <div class="modal fade" id="formFilter" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="false">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                    fill="currentColor" class="bi bi-funnel-fill" viewBox="0 0 16 16">
                                                    <path
                                                        d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2z" />
                                                </svg> Form filter
                                            </h5>
                                            <button type="button" class="btn close" data-bs-dismiss="modal"
                                                aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" width="20"
                                                    height="20" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                                                    <path
                                                        d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                                </svg></button>
                                        </div>
                                        <form style="margin-left:5px;" action="/admin/contribute" method="GET">

                                            <div class="modal-body">
                                                

                                                <div class="form-group">
                                                    <label for="projectId"> ID chương trình quyên góp</label>
                                                    <input type="text" class="form-control" id="projectId"
                                                        name="projectId">
                                                </div>

                                                <div class="form-group">
                                                    <label for="userId"> ID người dùng</label>
                                                    <input type="text" class="form-control" id="userId"
                                                        name="userId">
                                                </div>


                                                <div class="form-group">
                                                    <label for="conDate">Ngày</label>
                                                    <input type="date" class="form-control" id="conDate"
                                                        name="conDate">
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <div class="form-group">
                                                    <button type="submit" class="btn btn-light"
                                                        data-bs-dismiss="modal">Xem kết quả</button>
                                                </div>
                                               
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% if (contribute.length> 0) { %>
                                <form action="/admin/delete-manyproject" method="POST" id='formDel'>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <input type="hidden" name="listId" id='listId'>

                                    
                                    
                                </form>
                                <table class="table table-striped" style="width:100%">
                                    <thead>
                                        <tr>
                                            
                                            <th scope="col">STT</th>
                                            <th scope="col">Chương trình quyên góp</th>
                                            <th scope="col">ID người dùng</th>
                                            <th scope="col">Ngày quyên góp</th>
                                            <th scope="col">Trạng thái</th>
                                            <th scope="col"> Số tiền quyên góp</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (let con of contribute) { stt=stt+1; %>
                                            <tr>
                                                <td scope="col">
                                                    <%=stt%>
                                                </td>

                                                <td>
                                           <a href="/project/<%=con.projectId%>"> <%= con.projectId%></a>
                                                </td>

                                                
                                                <td>
                                                    <%= con.userId%>
                                                </td>

                                                <td>
                                                    <%= con.conDate.toISOString().slice(0, 10)%>
                                                </td>
                                                          
                                                <td>
                                                    <%= con.status %>
                                                </td>

                                                <td>
                                                    <%= con.contributionAmount.toLocaleString('vi', {style : 'currency' ,
                                                        currency : 'VND' }); %>
                                                </td>

                                                

                                            </tr>
                                            <%}%>
                                    </tbody>
                                </table>

                                <%- include('../includes/pagination.ejs',
                                    {previousPage:previousPage,page:page,nextPage:nextPage,lastPage:lastPage}) %>
                                    <% } else { %>
                                        <h1>No Project Found!</h1>
                                        <% } %>
                                            <!-- Button trigger modal -->


                                            <!-- Button trigger modal -->


                                            <!-- Modal -->


                </div>
            </main>
            <script src="/js/admin-projects.js"></script>
            <!-- MDB -->
            <script>

            </script>




            <%- include('../includes/end.ejs') %>