<%- include('../includes/head.ejs') %>
    <!-- Font Awesome -->
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main class="mt-3">
                <div style="margin:auto; max-width: 95%">
                   

                    <%if(del){%>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert" id="del">
                            <strong>DELETED!</strong> Xóa phần tử thành công
                            </button>
                        </div>

                        <%}%>
                            <form action="/admin/projects" method="GET" class="mt-3 col-12">
                                <div class="form-group" style="margin:auto;max-width: 400px;">
                                    <div class="row">
                                        <button type='button' class="btn btn-light" style="width:25%; margin-right:5px;background-color: #a50064; border-color:aliceblue; color: aliceblue; "
