<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
            <div class="alert alert-danger">
                <%= errorMessage %>
            </div>
            <% } %>
            <% if (message) { %>
                <div class="alert alert-success" role="alert">
                    <%= message %>
                </div>
                <% } %>
        <div class="col-12 col-md-4 col-lg-3 mt-5 mb-5" style="margin:auto" >
            <form action="/admin/addusers" method="POST" novalidate>
                <div class="form-group">
                    <label for="email">E-Mail</label>
                    <input
                        class="form-control <%=validationErrors.find(e=> e.param ==='email')? 'invalid':''%>"
                        type="email" name="email" id="email" value="<%=oldInput.email %>" style=" border-radius: 5 rem">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-primary mb-2 btn-block" type="submit" style="background-color: #a50064; border-color:aliceblue ">Thêm người dùng</button>
                 </form>
                 <hr>
            <form action="/admin/listAddusers" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="listEmail">file email <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                        <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
                      </svg></label>
                    <input type="file" name="upload" id="listEmail" class="form-control-file">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-primary mb-2 btn-block" type="submit" style="background-color: #a50064; border-color:aliceblue ">Thêm  nhiều người dùng</button>
            </form>
        </div>
    </main>

<%- include('../includes/end.ejs') %>